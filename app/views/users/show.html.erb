<!--サクセスメッセージ-->
<div>
 <p id class="notice"><%= flash[:notice] %></p>
</div>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
<!-- ユーザーの詳細 -->
     <%= render 'books/books', user: @user, book: @book %>
  </div>

<!--投稿一覧-->
<!--現在ログインしているユーザーの投稿のみ表示したい-->
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
       </thead>

      <tbody>
       <tr>
       <% @books.each do |book| %>
      <!--ユーザー画像-->
      <td>
      <%= link_to user_path(book.user) do %>
       <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
      </td>
       <td class="head-title"><%= link_to book.title, "/books/#{book.id}" %></td>
       <td><%= book.body %></td>
      </tr>
     </tbody>
      <% end %>
     </table>

   </div>
  </div>
 </div>