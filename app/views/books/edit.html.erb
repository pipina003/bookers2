<div>
  <p id="notice"></p>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-ld-5 px-5 px-sm-0 mx-auto">


<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="grop-form">
  <label>Title</label><br/>
  <%= f.text_field :title %><br/>
</div>
<div class="grop-form">
  <label>Opinion</label><br/>
  <%= f.text_area :body %></br>
</div>
  <%= f.submit 'Update Book', class: "btn btn-success" %>
<% end %>


<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
  </div>
 </div>
</div>