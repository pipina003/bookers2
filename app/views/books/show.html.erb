<div>
  <%= flash[:notice] %>
</div>


<div class="container">
 <div class="row">

  <div class="col-lg-4">
   <h1>User info</h1>
    <%= render 'books', user: @books.user, book: @book %>
  </div>

<div class="col-lg-8">
<h1>Book detail</h1>

 <table class="table table-striped">
 <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
 </thead>


<tbody>
 <tr>
  <td>
   <%= image_tag @books.user.get_profile_image(100,100) %></br>
   <%= link_to @books.user.name, user_path(@books.user_id)  %>
  </td>

  <td><%= link_to @books.title, book_path(@books.id) %></td>
  <td><%= @books.body %></td>


  <td><% if @books.user == current_user %></td>
   <td><%= link_to "編集", edit_book_path(@books.id) %></td>
   <td><%= link_to "削除", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
  <td><% end %></td>

 </tr>
</tbody>

</table>
   </div>
  </div>
 </div>