<div>
 <p id class="notice"><%= flash[:notice] %></p>
</div>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
<!--ユーザーのinfoと新規投稿-->
   <%= render 'books', user: current_user, book: @book %>
  </div>

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table class="table table-hover">
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <tr>
     <% @books.each do |book| %>
<!--ユーザー画像-->
     <td>
      <%= link_to user_path(book.user_id) do %>
       <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
     </td>
      <td><%= book.user.name %></td>

      <td class="head-title"><%= link_to book.title, "/books/#{book.id}" %></td>
      <td><%= book.body %></td>
     </tr>
    </tbody>
    <% end %>
   </table>

  </div>
 </div>
</div>